.container{
    position: relative;
}
.head{
   font-family:"PingFang-SC-Regular";
    font-size: 30rpx;
    color: white;
    margin-top: 30rpx;
    text-align: center;
}
.banner{
    text-align: center;
    margin-top: 50rpx;
}
.accumulate{
    font-family:"PingFang-SC-Regular";
    font-size: 30rpx;
    color: white;
    text-align: center;
    width: 276rpx;
    height: 30rpx;
    margin: 30rpx auto;
    margin-bottom: 13rpx;
}
.news {
   text-align: center;
    font-size: 20rpx;
    color: rgb(255,125,46);
    font-family: "PingFang-SC-Light";
}
.news image{
    height: 20rpx;
    width: 20rpx;
    vertical-align: middle;
}
.news text{
    padding-left: 13rpx;
}
.game{
    width: 240rpx;
    height: 240rpx;
    margin: 50rpx auto;
    margin-bottom: 15rpx;
    position: relative;
    line-height: 240rpx;
    text-align: center;
    color: #4d44a3;
    font-size: 34rpx;

}
.game image{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.invite button{
    background-color: #fb6c4a;
    width: 280rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin: 0 auto;
    text-align: center;
    line-height: 80rpx;
    color: white;
    margin-bottom: 10rpx;
    font-size: 34rpx;
}
.good{
    font-family: "PingFang-SC-Regular";
    font-size: 24rpx;
    margin: 0 auto;
    width: 280rpx;
    height: 50rpx;
    color: white;
    text-align: center;
    margin-bottom: 50rpx;
}
.modal{
    width: 574rpx;
    height: 320rpx;
    background-color: white;
    font-size: 24rpx;
    color: rgb(251,108,74);
    box-sizing: border-box;
    padding-left: 50rpx;
    padding-top: 30rpx;
    border-radius: 10rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    padding-right: 30rpx;
}
.modal text{
    display: block;
    line-height: 40rpx;
}
.modal .title{
    font-size: 30rpx;
    font-weight: 700;
}