page{
    padding: 60rpx 0 0 0;
}
.container{
    padding: 0;
}
/*用户信息*/
.user{
    width: 100%;
    height: 350rpx;
    display: flex;
    text-align: center;
    position: relative;
}
.user>image{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}
.user view{
    flex: 1;
}
.user .firstUser,.lastUser{
    width:306rpx;
    height: 150rpx;
    background-color: #d34685;
    border-radius: 0 150rpx 150rpx 0;
    position: relative;
    text-align: center;
    line-height: 150rpx;
}
.user .firstUser image{
    width: 124rpx;
    height: 124rpx;
    border-radius: 50%;
    position: absolute;
    right: 20rpx;
    top:50%;
    transform: translateY(-50%);
    border: 10rpx solid #fff;
    box-sizing: border-box;
}
.user .lastUser{
    margin-top: 200rpx;
    background-color: #5c89e8;
    border-radius: 150rpx 0  0 150rpx;
}
.user .lastUser .pic{
    width: 124rpx;
    height: 124rpx;
    border: 10rpx solid #fff;
    border-radius: 50%;
    position: absolute;
    left: 20rpx;
    top:50%;
    transform: translateY(-50%);
    font-size: 80rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 100rpx;
}
/*文字*/
.container>text{
    width: 100%;
    display: block;
    font-size: 32rpx;
    text-align: center;
    font-weight: 700;
    margin-top: 53rpx;
}
/*邀请*/
.btn{
    margin-top: 165rpx;
    padding: 0 100rpx;
}
.btn .bey,.next{
    float: left;
    width: 260rpx;
    height: 80rpx;
    border-radius: 10rpx;
    font-size: 36rpx;
    text-align: center;
    line-height: 80rpx;
}
.btn .bey{
    color: rgb(77,68,163);
    background-color: #fff;
}
.btn .next{
    background-color: rgb(244,172,0);
    margin-left: 28rpx;
    color: #fff;
}