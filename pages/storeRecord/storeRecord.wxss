page{
    background-image: none;
    padding: 0;
    background-color: #eee;
}
.container{
    padding: 0;
}

.item{
    background-color: #fff;
    border-top: 1rpx solid #eee;
    margin-bottom: 5rpx;
}
.item .goods{
    width: 100%;
    height: 180rpx;
    position: relative;
    color: #111;
}
.item .goods image{
    width: 145rpx;
    height: 145rpx;
    position: absolute;
    left: 15rpx;
    top: 50%;
    transform: translateY(-50%);
}
.item .goods>view{
    width: 530rpx;
    position: absolute;
    left: 200rpx;
    margin-top: 15rpx;
}
.item .time{
    float: left;
}
.item .time:first-child{
    width: 370rpx;
}
.item .time:last-child{
    color: #eee;
}
.item .money{
    float: right;
    color: rgb(153,153,153);
}
.item .user{
    margin-top: 20rpx;
    background-color: #fff;
    color: rgb(153,153,153);
    margin-left: 200rpx;
    padding-bottom: 10rpx;
}
.none{
    display: none;
}