page{
    background-image: none;
    padding: 0;
}
.container{
    padding: 0;
    color: #111;
}


.item{
    height: 99rpx;
    line-height: 99rpx;
    width: 100%;
    position: relative;
    border-bottom: 1rpx solid rgb(153,153,153);
}
.item text{
    position: absolute;
    left: 20rpx;
}
.item input{
    display: block;
    line-height: 99rpx;
    height: 99rpx;
    position: absolute;
    left: 0;
    margin-left: 150rpx;
}
.item .itemAdd{
    width: 100%;
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}
.item .itemAdd input{
    display: block;
    color: rgb(153,153,153);
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
    text-align: right;
}
.item .itemAdd image{
    width: 16rpx;
    height: 31rpx;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}
.citypicker{
    width: 100%;
    height: 500rpx;
    position: fixed;
    bottom: 0;
    left: 0;
}
.city-cancel,.city-true{
    position: absolute;
    z-index: 999;
    top: 80rpx;
}
.city-cancel{
    left: 50rpx;
}
.city-true{
    right: 50rpx;
}
picker-view{
    background-color: #fff;
    width: 100%;
    height: 380rpx;
    bottom: 0;
    position:fixed;
}

picker-view-column view{
    width: 100%;
    vertical-align:middle;
    line-height: 28rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.item:nth-last-child(2){
    border-bottom: none;
}
.item:nth-last-child(2) input{

    width: 98%;
    display: block;
    margin-left: 20rpx;
}

button{
    box-sizing: border-box;
    display: block;
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: rgb(253,137,0);
    color: #fff;
    font-size: 36rpx;
    margin-top: 70rpx;
}

/*弹框*/
.mode{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.2);
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 9;
}
.mode .modeBox{
    width: 550rpx;
    height: 250rpx;
    background-color: #fff;
    margin: 400rpx auto;
    color: #666;
    padding: 40rpx 0;
    box-sizing: border-box;
    text-align: center;
    border-radius: 10rpx;
}
.mode .modeBox text{
    display: block;
    margin-bottom: 20rpx;
}
.mode .modeBox>view{
    margin: auto;
    width: 100rpx;
    height: 50rpx;
    margin-top: 40rpx;
    background-color: rgb(253,137,0);
    border-radius: 10rpx;
    color: #fff;
    line-height: 50rpx;
}